<h1>List of Movies</h1>

<a href="http://localhost:3000/movie/new">Add a New Movie</a>

<table>
  <tr>
    <th>Image URL</th>
    <th>Description</th>
    <th>Duration</th>
    <th>Year</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <%= movie.description %>
    </td>
      <td>
      <%= movie.duration %>
    </td>
      <td>
      <%= movie.year %>
    </td>
    <td>
      <a href="http://localhost:3000/movie/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/movie/<%= movie.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>


